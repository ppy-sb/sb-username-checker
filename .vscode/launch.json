{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/app/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node-terminal",
            "name": "Run Script: dev sb-db",
            "request": "launch",
            "command": "npm run dev app-sb-db",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: dev cli-single",
            "request": "launch",
            "command": "npm run dev single-test",
            "cwd": "${workspaceFolder}"
        }
    ]
}